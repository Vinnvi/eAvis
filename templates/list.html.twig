{% extends 'base.html.twig' %}

{% block title %} Liste des articles {% endblock %}

{% block body %}




<div class="container">
  <h1> Liste des articles </h1>
  <div class="row flex">
    {% for article in articles %}
      <div class="col-3">
        <div class="card" style="margin:5px;">
          <div class="card-body" style="min-height:250px;max-height:300px;">
            <h5 class="card-title">{{ article.nom }}</h5>
            <p class="card-text">{{ article.description }}</p>
            <a href="{{ path('article', {id: article.id})}}" class="card-link">Regarder les avis</a>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>




{% endblock %}
